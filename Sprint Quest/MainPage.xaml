<Page
    x:Class="Sprint_Quest.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sprint_Quest"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="textBlock" FontSize="30" HorizontalAlignment="Left" Height="90" Margin="10,10,0,0" TextWrapping="Wrap" Text="Welcome to Sprint Quest" VerticalAlignment="Top" Width="390" SelectionChanged="textBlock_SelectionChanged" />
        <TextBlock x:Name="textBlock1" FontSize="20" FontFamily="Arial" HorizontalAlignment="Left" Height="40" Margin="10,133,0,0" TextWrapping="Wrap" Text="Microsoft Account" VerticalAlignment="Top" Width="176"/>
        <TextBlock x:Name="textBlock2" FontSize="20" HorizontalAlignment="Left" Height="38" Margin="10,202,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="176"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="11" Margin="191,133,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="154"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="38" Margin="191,202,0,0" VerticalAlignment="Top" Width="154"/>
    </Grid>
</Page>
